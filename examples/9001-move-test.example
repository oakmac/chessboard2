// Test 3

attachEvent('test3step1Btn', 'click', () => {
  window.test3step1 = board1.position('8/8/rnbqkbnr/pppppppp/PPPPPPPP/1NBQKBNR/8/8', 500, () => {
    appendHtml('test3results', '<div id=test3step1finished>test3step1finished</div>')
  })
})

