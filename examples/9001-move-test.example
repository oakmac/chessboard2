// Test 4

attachEvent('test4step1Btn', 'click', async () => {
  const result = await board1.position('8/8/8/3pk3/8/4K3/8/8')
  appendHtml('test4results', '<pre id=test4step1finished>' + JSON.stringify(result) + '</pre>')
})

