===== JS
const board = Chessboard2('myBoard', 'start')
let arrow1Id = null
let arrow2Id = null
let arrow3Id = null

$('#addArrow1Btn').on('click', function () {
  arrow1Id = board.addArrow('e2-e4')
  console.log('added Arrow 1 with id:', arrow1Id)
})

$('#addArrow2Btn').on('click', function () {
  arrow2Id = board.addArrow('c7-c5', '#ffee66', 'small')
  console.log('added "small" Arrow 2 with id:', arrow2Id)
})

$('#addArrow3Btn').on('click', function () {
  arrow3Id = board.addArrow('d7-d5', '#66eeff', 'medium')
  console.log('added "medium" Arrow 3 with id:', arrow3Id)
})

$('#addArrow4Btn').on('click', function () {
  arrow4Id = board.addArrow('e7-e5', '#aaff22', 'large')
  console.log('added "large" Arrow 4 with id:', arrow4Id)
})

$('#moveArrow4Btn').on('click', function () {
  board.moveArrow(arrow4Id, 'g8-f6')
  console.log('move Arrow 4 with id:', arrow4Id)
})

$('#addArrow5Btn').on('click', function () {
  arrow5Id = board.addArrow({
    color: 'orange',
    end: 'f3',
    opacity: 100,
    size: 'large',
    start: 'g1'
  })
  console.log('added Arrow 5 with id:', arrow5Id)
})

$('#removeArrow5Btn').on('click', function () {
  board.removeArrow(arrow5Id)
  console.log('remove Arrow 5 with id:', arrow5Id)
})

$('#logArrowsBtn').on('click', function () {
  console.log('Arrows Array:')
  console.log(board.getArrows())

  console.log('Arrows Object:')
  console.log(board.getArrows('object'))

  console.log('Arrows Map:')
  console.log(board.getArrows('map'))

  console.log('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~')
})

$('#clearArrowsBtn').on('click', function () {
  board.clearArrows()
})
