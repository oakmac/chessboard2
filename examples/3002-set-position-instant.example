===== id
3002-set-position-instant

===== Name
Set Position Instantly

===== Description
Pass <code class="js keyword">false</code> as the second argument to the <a href="docs.html#methods:start"><code class="js plain">start</code></a> and <a href="docs.html#methods:position"><code class="js plain">position</code></a> methods to set the board position instantly.

===== HTML
<div id="myBoard" style="width: 400px"></div>
<button id="setStartBtn">Start Position</button>
<button id="setRuyLopezBtn">Ruy Lopez</button>
<button id="setRookCheckmateBtn">Rook Checkmate</button>

<button id="setPawns1">Pawns 1</button>
<button id="setPawns2">Pawns 2</button>
<button id="setPawns3">Pawns 3</button>

===== JS
var board = Chessboard2('myBoard')

attachEvent('setStartBtn', 'click', function() {
  board.start(false)
})

attachEvent('setRuyLopezBtn', 'click', function () {
  board.position('r1bqkbnr/pppp1ppp/2n5/1B2p3/4P3/5N2/PPPP1PPP/RNBQK2R', false)
})

attachEvent('setRookCheckmateBtn', 'click', function () {
  board.position({
    a4: 'bK',
    c4: 'wK',
    a7: 'wR'
  }, false)
})

attachEvent('setPawns1', 'click', function () {
